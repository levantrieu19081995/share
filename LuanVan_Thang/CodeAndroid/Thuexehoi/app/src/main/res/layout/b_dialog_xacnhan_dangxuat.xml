<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0DDDD">

    <LinearLayout
        android:background="#5EB649"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Xác nhận đăng xuất"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableRight="@drawable/icon_canhbao"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Bạn chắc muốn đăng xuất ! \nViệc đăng xuất thông tin bạn sẽ không thấy được một số nội dung...!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:background="#fff"
                android:text="Không"
                android:layout_centerInParent="true"
                android:id="@+id/btn_huy_dangxuat"
                android:layout_width="100dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:background="#fff"
                android:text="Đồng ý"
                android:layout_centerInParent="true"
                android:id="@+id/btn_dongy_dangxuat"
                android:layout_width="100dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>
</RelativeLayout>